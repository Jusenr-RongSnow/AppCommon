<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/picker_rel"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.myself.appcommon.pickerscrollview.views.PickerScrollView
        android:id="@+id/pickerscrlllview"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="50dp"
        android:background="#ffffff"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="-110dp"
        android:background="@drawable/picker_tv_bg"/>

    <Button
        android:id="@+id/picker_yes"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="120dp"
        android:background="#000f00"
        android:text="确定"
        android:textColor="#ffffff"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="122"/>

</LinearLayout>